string NombreCliente[10000];

//atriz bidimensional para guardar Sexo, AñoNac, IdPais
string mat[10000][3];

void rellenar_DetalleCliente() {
    srand(time(NULL)); // Semilla para números aleatorios distintos

    for (int i = 0; i < 10000; i++) {
        int sexo = rand() % 2;
        if (sexo == 0)
            mat[i][0] = "M";
        else
            mat[i][0] = "F";

        int anio = rand() % 83 + 1943; // Entre 1943 y 2025
        int idPais = rand() % 195;     // Índices de países

        mat[i][1] = to_string(anio);
        mat[i][2] = to_string(idPais);
    }
}

// Imprimir: IdCliente, Sexo, AñoNac, IdPais (sin nombres)
void imprimir_DetalleCliente() {
    cout << "IdCli\tSexo\tAñoNac\tIdPais\n";
    for (int i = 0; i < 10000; i++) {
        cout << i << "\t\t\t"
             << mat[i][0] << "\t"
             << mat[i][1] << "\t"
             << mat[i][2] << "\n";
    }
}

int main() {
    cout << "Ejercicio 2: Creación de matriz de detalles\n";

    auto inicio = chrono::high_resolution_clock::now();
    rellenar_DetalleCliente();
    auto medio = chrono::high_resolution_clock::now();
    imprimir_DetalleCliente();
    auto fin = chrono::high_resolution_clock::now();

    auto duracion1 = chrono::duration_cast<chrono::microseconds>(medio - inicio);
    auto duracion2 = chrono::duration_cast<chrono::microseconds>(fin - medio);

    cout << "Tiempo de generación de nombres y detalles: "
         << duracion1.count() << " microsegundos\n";
    cout << "Tiempo de impresión: "
         << duracion2.count() << " microsegundos\n";

    return 0;
}

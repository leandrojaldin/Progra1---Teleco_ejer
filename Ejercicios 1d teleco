#include <iostream>
#include <string>
#include <vector>
#include <chrono>

std::vector<std::string> estados; // Vector simple para guardar los dos estados

void rellenar_estado() {
    estados.push_back("Pendiente");
    estados.push_back("Pagado");
}

void imprimir_Nombre_estado() {
    for (const auto& estado : estados) {
        std::cout << "Estado: " << estado << std::endl;
    }
}

int main() {
    std::cout << "Ejercicio 1 inciso a" << std::endl;

    rellenar_estado(); // Cargar los estados (no medimos esto)

    auto inicio = std::chrono::high_resolution_clock::now(); // Inicio medición
    imprimir_Nombre_estado();
    auto fin = std::chrono::high_resolution_clock::now();    // Fin medición

    auto duracion = std::chrono::duration_cast<std::chrono::microseconds>(fin - inicio);
    
    std::cout << "Tiempo de impresión de estados: "
              << duracion.count() << " microsegundos" << std::endl;

    return 0;
}
